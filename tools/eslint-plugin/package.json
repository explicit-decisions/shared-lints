{
  "name": "@shared-lints/eslint-plugin",
  "version": "1.0.0",
  "description": "Custom ESLint rules enforcing explicit decisions for LLM-assisted development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yehudakatz/shared-lints.git",
    "directory": "tools/eslint-plugin"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "shared-lints",
    "ai-assisted-development",
    "llm",
    "no-mocks",
    "typescript"
  ],
  "author": "Yehuda Katz",
  "homepage": "https://github.com/yehudakatz/shared-lints#readme",
  "bugs": {
    "url": "https://github.com/yehudakatz/shared-lints/issues"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "@typescript-eslint/parser": "^8.32.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.32.1"
  }
}