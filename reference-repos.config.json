{
  "description": "Template configuration for reference repositories. Copy to reference-repos.config.json and update paths.",
  "repositories": [
    {
      "name": "example-project",
      "path": "/path/to/your/project",
      "description": "Example project demonstrating shared-lints patterns",
      "tags": ["typescript", "example"],
      "enabled": false
    }
  ],
  "syncOptions": {
    "exclude": [
      "node_modules/",
      ".git/",
      "coverage/",
      "dist/",
      "build/",
      ".next/",
      "*.log",
      ".env*",
      ".DS_Store"
    ],
    "dryRun": false
  }
}
