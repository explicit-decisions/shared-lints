{
  "name": "explicit-decisions",
  "version": "1.0.0",
  "private": true,
  "description": "ESLint configurations enforcing explicit decisions for LLM-assisted development",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "eslint . && markdownlint-cli2 \"*.md\" \"docs/**/*.md\" && node scripts/check-dependencies.js",
    "lint:fix": "eslint . --fix && markdownlint-cli2 \"*.md\" \"docs/**/*.md\" --fix",
    "lint:strict": "eslint . --max-warnings 0 && markdownlint-cli2 \"*.md\" \"docs/**/*.md\" && node scripts/check-dependencies.js",
    "lint:deps": "node scripts/check-dependencies.js",
    "lint:md": "markdownlint-cli2 \"*.md\" \"docs/**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 \"*.md\" \"docs/**/*.md\" --fix",
    "deps:init": "node scripts/deps-init.js",
    "deps:interactive": "node scripts/deps-interactive.js",
    "deps:check": "pnpm exec npm-check-updates",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r run clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.17.50",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import-x": "^4.13.3",
    "markdownlint-cli2": "^0.12.1",
    "npm-check-updates": "^17.1.11",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@tsconfig/strictest": "^2.0.5"
  }
}